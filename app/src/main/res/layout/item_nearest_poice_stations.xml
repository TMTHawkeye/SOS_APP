<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/policeStations_card"
    android:layoutDirection="ltr"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_15sdp"
    app:cardElevation="@dimen/_8sdp"
    android:layout_marginHorizontal="@dimen/_15sdp"
    android:layout_marginVertical="@dimen/_5sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/policeStation_id_tv"
            android:layout_width="0dp"
            app:layout_constraintEnd_toStartOf="@+id/next_id"
            android:layout_marginEnd="@dimen/_5sdp"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_height="wrap_content"
            android:text="@string/police_station"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="@dimen/_15sdp"/>

        <TextView
            android:id="@+id/police_address_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="@string/dummy_address"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/policeStation_id_tv"
            app:layout_constraintStart_toStartOf="@+id/policeStation_id_tv"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginVertical="@dimen/_15sdp"
            app:layout_constraintEnd_toStartOf="@+id/next_id"
            android:layout_marginEnd="@dimen/_15sdp"/>

        <ImageView
            android:id="@+id/next_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/next_img"
            app:layout_constraintStart_toEndOf="@+id/police_address_id"
            app:layout_constraintTop_toTopOf="@+id/policeStation_id_tv"
            app:layout_constraintBottom_toBottomOf="@+id/police_address_id"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/_15sdp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>